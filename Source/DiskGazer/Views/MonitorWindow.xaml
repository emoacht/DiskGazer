<Window x:Class="DiskGazer.Views.MonitorWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:ma="clr-namespace:MonitorAware;assembly=MonitorAware"
		Title="Monitor"
		FontFamily="Verdana" FontSize="12"
		Height="400" Width="540"
		Icon="/DiskGazer;component/Resources/Gazer.ico"
		WindowStartupLocation="CenterOwner"
		Loaded="OnLoaded">
	<ma:MonitorAwareProperty.Instance>
		<ma:MonitorAwareProperty x:Name="MonitorProperty"/>
	</ma:MonitorAwareProperty.Instance>

	<Grid>
		<TextBox x:Name="TextBoxInnerStatus"
				 Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
				 VerticalScrollBarVisibility="Auto"/>
	</Grid>
</Window>